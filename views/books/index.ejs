<h2>Search Title</h2>
<form action="/books" method="GET">
    <div>
    <!--
    "
        <% if (locals.searchOptions != null) { %>
            <%= searchOptions.title%>
        <% } %>"> -->
        <label>Tile</label>
        <input type="text" name="title" value="<%= typeof searchOptions !== 'undefined' ? searchOptions.title : ""%>">
    </div>
    <div>
        <label>Published After</label>
        <input type="date" name="publishedAfter" value="<%= typeof searchOptions !== 'undefined' ? searchOptions.publishedAfter : ""%>">
    </div>
    <div>
        <label>Published Before</label>
        <input type="date" name="publishedBefore" value="<%= typeof searchOptions !== 'undefined' ? searchOptions.publishedBefore : ""%>">
    </div>

    <button type="submit">Search</button>
</form>
<div>
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img height="150" width="100" src="<%= book.coverImagePath %>" alt="">
        </a>
    <% }) %>
</div>